{% extends "::base.html.twig" %}

{% block contenu %}
    <div class="well col-lg-6 col-lg-offset-3">
        <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
            {#{{ form_widget(form) }}#}
            <div class="form-group">
                {{ form_label(form.new.first, null, {
                    'label_attr': {'class': 'col-md-3 control-label'}
                }) }}

                <div class="col-md-6">
                    {{ form_widget(
                    form.new.first,
                    {'attr' : {'class': 'form-control'}}
                    )}}
                </div>
                <span class="text-danger">{{ form_errors(form.new.first) }}</span>
            </div>

            <div class="form-group">
                {{ form_label(form.new.second, null, {
                    'label_attr': {'class': 'col-md-3 control-label'}
                }) }}

                <div class="col-md-6">
                    {{ form_widget(
                    form.new.second,
                    {'attr' : {'class': 'form-control'}}
                    )}}
                </div>
                <span class="text-danger">{{ form_errors(form.new.second) }}</span>
            </div>

            {{ form_rest(form) }}

            <div>
                <input type="submit" class="btn btn-success center-block" value="{{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}" />
            </div>
        </form>
    </div>
{% endblock %}
